@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager

<div class="navigation-buttons">
    <button class="btn-navigation" @onclick="NavigateToShoppingList">Shopping List</button>
    <button class="btn-navigation" @onclick="NavigateToTaskManager">Task Manager</button>
</div>

@code {
    private void NavigateToShoppingList()
    {
        NavigationManager.NavigateTo("/shopping-list");
    }

    private void NavigateToTaskManager()
    {
        NavigationManager.NavigateTo("/task-manager");
    }
}
